extends layout

block content
  a.btn(class="btn-success",href="/department/create") Create
  h1= title
  - let items = results;
  div(class="container-fluid")
    div(class="row")
      each item,index in items
        - let destination = `dispatch(\"/department/update?id=${item._id}\")`
        - let detailsDestination = `dispatch(\"/department/details?id=${item._id}\")`
         - let deleteDestination = `dispatch(\"/department/delete?id=${item._id}\")`
        div(class="col-sm-2" class="m-1")
          h3 #{item.Dept_Name}
          p #{item.Faculty_Strength}
          p #{item.Total_Intake}
          button.btn( class="btn-primary ml-1 m-1", onclick= destination) Update
          button.btn( class="btn-info ml-1 m-1", onclick= detailsDestination) Details
          a.btn( class="btn-danger ml-1 m-1", href=`/department/delete?id=${item._id}`) Delete
  script.
    function dispatch(path){
      console.log(path);
      window.location.href=path;
    }