extends layout

block content
  h1= title
  - let items = results;

  div.container-fluid
    div.row
      each item,index in items
        div.col-sm-2(onclick=`buy(${index})`)
          h3 #{item.Dept_Name}
          p #{item.Faculty_Strength}
          p #{item.Total_Intake}
  script.
    function buy(index){
      alert(`You have purchased item ${index}`);
    }